<h2><%= t('devise.common.sign_in').capitalize %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "pelda@sch.bme.hu" %></div>

  <div><%= f.label :password, t('devise.common.password').capitalize %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="beside-me"><%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.views.sessions.remember_me') %></div>
  <% end -%>

  <div><%= f.submit t('devise.common.sign_in').capitalize %></div>
<% end %>

<%= render "devise/shared/links" %>
